<div class="contact-header">
  <h1>Contact Jensen Locksmithing</h1>
</div>
<div class="row contact-us">
  <div class="col-md-offset-4 col-md-4">
  <%= form_tag("/contact_form", method: 'put', class: "contact-us") do %>
    <div class="form-group">
      <%= label_tag(:name) %>
      <%= text_field_tag(:name, nil, {placeholder: 'Name', class: "form-control"})  %>
    </div>

    <div class="form-group">
      <%= label_tag(:email) %>
      <%= email_field_tag(:email, nil, {placeholder: 'Email', class: "form-control"})  %>
    </div>

    <div class="form-group">
      <%= label_tag(:contact_time, "Best Time To Contact You") %>
      <%= select_tag(:contact_time, raw("<option>Morning</option><option>Noon</option><option>Afternoon</option><option>Evening</option>"), include_blank: true, class: "form-control") %>
    </div>

    <hr>

    <div class="form-group">
      <%= label_tag(:subject) %>
      <%= text_field_tag(:subject, nil, {placeholder: 'Subject', class: "form-control"})  %>
    </div>

    <div class="form-group">
      <%= label_tag(:message) %>
      <%= text_area_tag(:message, nil, {class: "form-control", rows: '5'}) %>
    </div>

    <button type="submit" class="btn btn-default">Send</button>
  </form>
  <% end %>
</div>

