  </head>

  <body>
    <!-- Google Tag Manager (noscript) -->
      <% if Rails.env.production? %>
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NX64VHJ"
        height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
      <% end %>
    <!-- End Google Tag Manager (noscript) -->
      <% if flash[:notice] %>
      <p class="bg-primary">
        <%= flash[:notice] %>
      </p>
    <% end %>

    <% if flash[:alert] %>
      <p class="bg-danger">
       <%= flash[:alert] %>
      </p>
    <% end %>

    <div class="app-container">
      <%= render "layouts/header" %>
      <% if admin_signed_in? %>
        <%= render "admin/layouts/admin_header" %>
      <% end %>
      <div class="page-container">
        <%= yield %>
      </div>
      <%= render "layouts/footer" %>
    </div>
  </body>
</html>
